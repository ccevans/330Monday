 <section class="homepage-back">
  <div id="posts">
    <% @posts.each do |post| %>
    <div class="container-post-index">

		<% unless post.image.nil? || post.image.blank? %>
			
        <%= link_to post_path(post) do %>
				  <%= image_tag post.image.url(:small) %>
        <% end %>
	
		<% end %>

     
      
      </div>
    <% end %>
  </section>



    
